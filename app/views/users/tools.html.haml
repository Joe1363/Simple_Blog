%h4.text-center= "Admin Tools"
%br
.row
  .col-md-4
    %h5.underline= "Name"
  .col-md-4
    %h5.underline= "Role"
  .col-md-4
    %h5.underline= "Options"
- @users.each do |a|
  .row
    .col-md-4.col-md-offset
      %p= a.first_name + " " + a.last_name
    .col-md-4
      %p= a.role
    .col-md-4
      %p
        = link_to "Toggle Moderator", "/users/tools/#{a.id}", method: :patch
        -# |
        -# = link_to "Ban"
  %hr
