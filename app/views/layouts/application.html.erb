<!DOCTYPE html>
<html>
<head>
  <title>SimpleBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Handlee' rel='stylesheet' type='text/css'>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" id="brand" href="/">Simple Blog</a>
      </div>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="nav_text_padding">Hello <%= current_user.first_name %>!</li>
          <li class="empty_space nav_text_padding">|</li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Articles <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="/articles/more">View Articles</a></li>
              <li><a href="/articles/search">Search</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="/articles/new">New Article</a></li>
              <li><a href="/articles/userArticles">Manage Articles</a></li>
            </ul>
          </li>
          <li><a href="/users/edit">Settings</a></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><a href="/users/sign_in">Log In</a></li>
          <li><a href="/users/sign_up">Sign Up</a></li>
        <% end %>
      </ul>
    </div>
  </nav>
<%= yield %>

</body>
</html>
